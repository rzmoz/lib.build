<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp3.0</TargetFramework>
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>build</ToolCommandName>
    <Authors>rzmoz</Authors>
    <Product>Lib.Build</Product>
    <Description>Builds Visual Studio 2017+ solutions and produces easy to consume release artifacts</Description>
    <RepositoryUrl>https://github.com/rzmoz/lib.build</RepositoryUrl>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageProjectUrl>https://github.com/rzmoz/lib.build</PackageProjectUrl>
    <PackageLicenseFile></PackageLicenseFile>
    <Copyright>@rzmoz</Copyright>
    <RepositoryType>git</RepositoryType>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="DotNet.Basics" Version="9.8.3" />
    <PackageReference Include="DotNet.Basics.Cli" Version="2.2.8" />
    <PackageReference Include="DotNet.Basics.PowerShell" Version="6.2.2" />
  </ItemGroup>

</Project>
