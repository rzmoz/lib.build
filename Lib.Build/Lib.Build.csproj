<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp3.0</TargetFramework>
    <Authors>rzmoz</Authors>
    <Product>Lib.Build</Product>
    <Description>Builds Visual Studio 2017+ solutions and produces easy to consume release artifacts</Description>
    <RepositoryUrl>https://github.com/rzmoz/lib.build</RepositoryUrl>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageProjectUrl>https://github.com/rzmoz/lib.build</PackageProjectUrl>
    <PackageLicenseFile></PackageLicenseFile>
    <Copyright>@rzmoz</Copyright>
    <RepositoryType>git</RepositoryType>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="DotNet.Basics" Version="10.0.0-beta.1.2" />
    <PackageReference Include="DotNet.Basics.Cli" Version="10.0.0-beta.1.2" />
    <PackageReference Include="DotNet.Basics.PowerShell" Version="7.0.0-beta.1.3" />
  </ItemGroup>

</Project>
